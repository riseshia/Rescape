<div class="row">
  <div class="col-sm-offset-2 col-sm-7">
    <h2 class="text-center">Log in</h2>

    <%= simple_form_for(resource, as: resource_name,
        url: session_path(resource_name), wrapper: :horizontal_form) do |f| %>
      <div class="form-inputs">
        <%= f.input :username, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :remember_me, as: :boolean, label_html: { class: "col-sm-offset-3" } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions col-sm-offset-3">
        <%= f.button :submit, "Log in", class: "btn-primary" %>
        <%= render "users/shared/links" %>
      </div>
    <% end %>

  </div>
</div>