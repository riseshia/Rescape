<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Content title</th>
      <th>Content episode</th>
      <th>User</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.body %></td>
        <td><%= review.content_title %></td>
        <td><%= review.content_episode %></td>
        <td><%= review.user.username %></td>
        <td><%= review.level %></td>
        <td><%= link_to "Show", review %></td>
        <td><%= link_to "Edit", edit_review_path(review) %></td>
        <td><%= link_to "Destroy", review, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Review", new_review_path %>
